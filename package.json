{
    "name": "threegold-ui",
    "author": "chenyx",
    "version": "1.0.0",
    "description": "Vue3+Vite+TailwindCss的UI组件库",
    "private": true,
    "license": "ISC",
    "scripts": {
        "dev": "pnpm -C play dev",
        "docs:dev": "pnpm -C docs dev",
        "format": "prettier --write --cache .",
        "lint:lint-staged": "lint-staged",
        "prepare": "git init && husky install",
        "commit": "git-cz"
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-git"
        }
    },
    "lint-staged": {
        "*.{js,ts}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{cjs,json}": [
            "prettier --write"
        ],
        "*.{vue,html}": [
            "eslint --fix",
            "prettier --write",
            "stylelint --fix"
        ],
        "*.{scss,css}": [
            "stylelint --fix",
            "prettier --write"
        ],
        "*.md": [
            "prettier --write"
        ]
    },
    "dependencies": {
        "@threegold-ui/components": "workspace:^",
        "@threegold-ui/docs": "workspace:^",
        "@threegold-ui/hooks": "workspace:^",
        "@threegold-ui/theme-chalk": "workspace:^",
        "@threegold-ui/utils": "workspace:^",
        "dayjs": "^1.11.3",
        "threegold-ui": "workspace:^"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.6.1",
        "@commitlint/config-conventional": "^17.6.1",
        "@types/node": "^20.1.2",
        "@types/sass": "^1.43.1",
        "@typescript-eslint/eslint-plugin": "^5.59.1",
        "@typescript-eslint/parser": "^5.59.1",
        "@vitejs/plugin-vue": "^4.1.0",
        "commitizen": "^4.3.0",
        "cz-git": "^1.6.1",
        "eslint": "^8.39.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-vue": "^9.11.0",
        "husky": "^8.0.0",
        "lint-staged": "^13.2.2",
        "prettier": "^2.8.8",
        "sass": "^1.62.1",
        "stylelint": "^15.6.0",
        "stylelint-config-html": "^1.1.0",
        "stylelint-config-recess-order": "^4.0.0",
        "stylelint-config-recommended-scss": "^11.0.0",
        "stylelint-config-recommended-vue": "^1.4.0",
        "stylelint-config-standard": "^33.0.0",
        "stylelint-config-standard-scss": "^9.0.0",
        "typescript": "^5.0.4",
        "vite": "^4.3.2",
        "vue": "^3.3",
        "vue-router": "^4.1.6",
        "vue-tsc": "^1.4.2"
    }
}
